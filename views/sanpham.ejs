<% include template/header %>
<!--banner-->
<div class="banner-top">
	<div class="container">
		<h1>Sản phẩm</h1>
		<em></em>
		<h2><a href="/">Trang chủ</a><label>/</label>Sản phẩm</h2>
	</div>
</div>
<!--content-->
<div class="product">
	<div class="container">
		<div class="col-md-9">
			<div class="mid-popular">
				<% duLieuJson.sanpham.forEach(function(motsanpham){ %>
				<div class="col-md-4 item-grid simpleCart_shelfItem">
					<div class=" mid-pop">
						<div class="pro-img">
							<img src="<%= motsanpham.bigImage %>" class="img-responsive"
								alt="<%= motsanpham.titleImage %>">
							<div class="zoom-icon ">
								<a class="picture" href="<%= motsanpham.bigImage %>" rel="<%= motsanpham.title %>"
									class="b-link-stripe b-animate-go  thickbox"><i
										class="glyphicon glyphicon-search icon "></i></a>
								<a href="/<%= motsanpham.duongDanSEO %>.<%= motsanpham.id %>"><i
										class="glyphicon glyphicon-menu-right icon"></i></a>
							</div>
						</div>
						<div class="mid-1">
							<div class="women">
								<span><%= motsanpham.productDes %></span>
								<h6><a href="/<%= motsanpham.duongDanSEO %>.<%= motsanpham.id %>"><%= motsanpham.title %></a>
								</h6>
							</div>
							<div class="img item_add">
								<a href="/<%= motsanpham.duongDanSEO %>.<%= motsanpham.id %>"><img src="images/ca.png"
										alt=""></a>
							</div>
							<div class="clearfix"></div>
						</div>
						<div class="mid-2">
							<p><label>70K</label><em class="item_price">49K</em></p>
							<div class="block">
								
							</div>

							<div class="clearfix"></div>
						</div>

					</div>
				</div>
				<% }) %>
				<hr />
				<div class="clearfix"></div>
			</div>
		</div>
		<div class="col-md-3 product-bottom">
			<!--categories-->
			<div class=" rsidebar span_1_of_left">
				<h4 class="cate">Categories</h4>
				<ul class="menu-drop">
					<li class="item1"><a href="#">Nam giới </a>
					</li>
					<li class="item2"><a href="#">Nữ giới </a>
					</li>

				</ul>
			</div>
			<!--initiate accordion-->
			<script type="text/javascript">
				$(function () {
					var menu_ul = $('.menu-drop > li > ul'),
						menu_a = $('.menu-drop > li > a');
					menu_ul.hide();
					menu_a.click(function (e) {
						e.preventDefault();
						if (!$(this).hasClass('active')) {
							menu_a.removeClass('active');
							menu_ul.filter(':visible').slideUp('normal');
							$(this).addClass('active').next().stop(true, true).slideDown('normal');
						} else {
							$(this).removeClass('active');
							$(this).next().stop(true, true).slideUp('normal');
						}
					});

				});
			</script>
			<!--//menu-->
			<section class="sky-form">
				<h4 class="cate">Khuyến mại</h4>
				<div class="row row1 scroll-pane">
					<div class="col col-4">
						<label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i></i>Upto - 30%
							(Không giới hạn)</label>
					</div>
				</div>
			</section>


			<!---->
			<section class="sky-form">
				<h4 class="cate">Thể loại</h4>
				<div class="row row1 scroll-pane">
					<div class="col col-4">
						<label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i></i> Son
							dưỡng</label>
					</div>

			</section>
			<section class="sky-form">
				<h4 class="cate">Thương hiệu</h4>
				<div class="row row1 scroll-pane">
					<div class="col col-4">
						<label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i></i>Astrid</label>
					</div>

				</div>
			</section>
		</div>
		<!--initiate accordion-->
		<script type="text/javascript">
			$(function () {
				var menu_ul = $('.menu-drop > li > ul'),
					menu_a = $('.menu-drop > li > a');
				menu_ul.hide();
				menu_a.click(function (e) {
					e.preventDefault();
					if (!$(this).hasClass('active')) {
						menu_a.removeClass('active');
						menu_ul.filter(':visible').slideUp('normal');
						$(this).addClass('active').next().stop(true, true).slideDown('normal');
					} else {
						$(this).removeClass('active');
						$(this).next().stop(true, true).slideUp('normal');
					}
				});

			});
		</script>
		<!--//menu-->
		<div class="clearfix"></div>
	</div>
	<!--products-->

	<!--//products-->
	<!--brand-->
	<div class="container">
		<div class="brand">
			<div class="col-md-3 brand-grid">
				<img src="/images/ic.jpg" class="img-responsive" alt="">
			</div>
		
			<div class="clearfix"></div>
		</div>
	</div>
	<!--//brand-->
</div>
<!--//content-->



<% include template/footer %>